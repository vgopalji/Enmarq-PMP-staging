<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Carestream</title>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" rel="stylesheet" />
    <!-- Bootstrap code & custom styles-->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/style.css" rel="stylesheet" />
    <!-- Fontawesome -->
    <script src="https://kit.fontawesome.com/e508532408.js" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" 
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

</head>
<body>
    <header>
        <nav class="topbar navbar fixed-top navbar-expand-sm border-bottom">
            <div class="sidebar-heading col-sm-2 text-center">
                <img src="img/logo.gif" alt="Carestream" />
            </div>
            <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                <li class="nav-item dropdown">
                    <a class="text-decoration-none dropdown-toggle text-dark row" href="#" id="navbarDropdown" role="button"
                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <div class="text-right col">
                            <strong>John Doe</strong><br />
                            <small>Carestream Admin</small>
                        </div>
                        <div class="text-right col" style="width:35px;height:35px;">
                            <i class="fa fa-user rounded-circle" style="padding:10px;border:2px solid #ccc;"></i>
                        </div>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right user-menu border shadow-sm"
                         aria-labelledby="navbarDropdown">
                        <div class="row">
                            <div class="text-truncate col">Carestream</div>
                            <div class="text-truncate text-right col">
                                <a href="" class="text-decoration-none text-dark">Signout</a>
                            </div>
                        </div>
                        <div class="row mt-3 pb-3">
                            <div class="text-truncate col-3">
                                <i class="fa fa-user rounded-circle fa-3x" style="padding:10px;border:2px solid #ccc;"></i>
                            </div>
                            <div class="text-truncate col-9">
                                <h6>
                                    <strong>John Doe</strong><br />
                                    <small class="text-truncate">john.doe@carestream.com</small>
                                </h6>
                                <a href="" class="text-decoration-none">View Account</a>
                            </div>
                        </div>
                    </div>
                </li>
            </ul>
        </nav>

        <div class="d-flex mt-7 shadow-sm border-bottom pb-1 pt-1">
            <div class="col">
                <a class="text-dark pl-3 pr-3" href="#" id="menu-toggle"><i class="fa fa-bars"></i></a>
                <a class="text-dark pr-2 text-decoration-none" href="#" id="menu-toggle">Home</a><i class="fa fa-caret-right pl-1 pr-1"></i>
                <a class="text-dark pr-2 text-decoration-none" href="#" id="menu-toggle">Users</a>
            </div>
            <div class="col text-right">
                <a class="pr-2 text-decoration-none help-icon" href="#" id="menu-toggle">
                    <i class="fa fa-question-circle"></i>
                </a>
            </div>
        </div>

    </header>

    <div id="page-content-wrapper">
        <div class="d-flex flex-row" id="wrapper">
            <div class="right-shadow border-right bg-light" id="sidebar-wrapper">
                <div class="list-group list-group-flush mt-1">

                    <div class="panel-group" id="accordion">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne"
                                   class="list-group-item list-group-item-action">
                                    <i class="fa fa-home"></i> Home
                                </a>
                            </div>
                            <div id="collapseOne" class="panel-collapse collapse in">
                                <div class="panel-body">

                                </div>
                            </div>
                        </div>
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <a data-toggle="collapse" data-parent="#accordion" href="#collapseTwo"
                                   class="list-group-item list-group-item-action">
                                    <i class="fa fa-user"></i> Users
                                </a>
                            </div>
                            <div id="collapseTwo" class="panel-collapse collapse">
                                <div class="panel-body bg-white pl-4">
                                    <a class="list-group-item list-group-item-action" asp-area="" asp-page="/Users/Index">All Users</a>
                                    <a class="list-group-item list-group-item-action" asp-area="" asp-page="/Users/CreateUser">Create User</a>
                                    <a href="#" class="list-group-item list-group-item-action">Deleted Users</a>
                                    <a href="#" class="list-group-item list-group-item-action">User Attributes</a>
                                    <a href="#" class="list-group-item list-group-item-action">Bulk Operations</a>
                                </div>
                            </div>
                        </div>
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <a data-toggle="collapse" data-parent="#accordion" href="#collapseThree"
                                   class="list-group-item list-group-item-action">
                                    <i class="fa fa-users"></i> Groups
                                </a>
                            </div>
                            <div id="collapseThree" class="panel-collapse collapse">
                                <div class="panel-body bg-white pl-4">
                                    <a class="list-group-item list-group-item-action" asp-area="" asp-page="/Groups/Index">All Groups</a>
                                    <a class="list-group-item list-group-item-action" asp-area="" asp-page="/Groups/CreateGroup">Create Group</a>
                                    <a href="#" class="list-group-item list-group-item-action">Deleted Groups</a>
                                    <a href="#" class="list-group-item list-group-item-action">Bulk Operations</a>
                                </div>
                            </div>
                        </div>
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <a data-toggle="collapse" data-parent="#accordion" href="#collapseFour"
                                   class="list-group-item list-group-item-action">
                                    <i class="fa fa-lock"></i> Role &amp; Permissions
                                </a>
                            </div>
                            <div id="collapseFour" class="panel-collapse collapse">
                                <div class="panel-body">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel">   @RenderBody()</div>
        </div>


    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; CareStream - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>
    @*<script src="~/lib/jquery/dist/jquery.min.js"></script>*@
    <!-- JQuery & Bootstrap core -->
    @*<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>*@


    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
            crossorigin="anonymous"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    <script src="~/js/bootstrap.min.js"></script>
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
